    <footer class="text-center text-muted small mt-auto py-3">
        <p>&copy; 2025 ArtConnect. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js" asp-fallback-src="/Scripts/lib/jquery/jquery.min.js"></script>

    @RenderSection("Scripts", false)
    
</body>
</html>
