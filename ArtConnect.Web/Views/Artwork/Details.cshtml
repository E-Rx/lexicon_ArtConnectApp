@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ArtConnect.Web.Controllers
@using ArtConnect.Web.Models
@model Artwork

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@Model.Title - ArtConnect</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="display-5">@Model.Title</h1>
      <p class="text-muted">Shared by @Model.Contributor</p>
    </div>

    <div class="row">
      <div class="col-md-6 mb-4">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm w-100">
      </div>

      <div class="col-md-6">
        <ul class="list-group list-group-flush mb-4">
          <li class="list-group-item"><strong>Artist:</strong> @Model.Artist</li>
          <li class="list-group-item"><strong>Year:</strong> @Model.Year</li>
          <li class="list-group-item"><strong>Style:</strong> @Model.Style</li>
        </ul>
        <p>@Model.Description</p>
      </div>
    </div>

    <div class="text-center mt-4">
      <a asp-action="Index" class="btn btn-outline-primary">Back to gallery</a>
    </div>

    <footer class="text-center text-muted small mt-auto py-3">
      <p>&copy; 2025 ArtConnect. All rights reserved.</p>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
