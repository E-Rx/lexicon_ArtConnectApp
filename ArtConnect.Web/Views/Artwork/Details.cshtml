@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ArtConnect.Web.Controllers
@using ArtConnect.Web.Models
@model Artwork

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">

  <title>Document</title>
</head>

<body>

  <h1>@Model.Title</h1>
  <p><strong>Artist:</strong> @Model.Artist</p>
  <p><strong>Year:</strong> @Model.Year</p>
  <p><strong>Style:</strong> @Model.Style</p>
  <p>@Model.Description</p>
  <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 100%; height: auto;" />
  <p><small>Shared by @Model.Contributor</small></p>

  <p>
    <a asp-action="Index">Back to list</a>
  </p>

  <footer>
    <p>&copy; 2025 ArtConnect. All rights reserved.</p>
  </footer>

</body>

</html>
