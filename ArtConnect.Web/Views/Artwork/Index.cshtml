@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ArtConnect.Web.Models
@model Artwork[]

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ArtConnect Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
  <div class="container py-4">
    <header class="mb-4 text-center">
      <h1 class="display-4">Welcome to ArtConnect</h1>
      <p class="lead">
        A shared space where you and your friends can collect, explore, and celebrate your favorite artworks together.
        From timeless classics to modern gems, every contribution adds to our creative journey.
      </p>
    </header>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
      @foreach (var artwork in Model)
      {
        <div class="col">
          <div class="card h-100">
            @if (!string.IsNullOrEmpty(artwork.ImageUrl))
            {
              <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" style="object-fit: cover; height: 200px;">
            }
            <div class="card-body">
              <h5 class="card-title">
                <a asp-action="Details" asp-route-id="@artwork.Id" class="text-decoration-none">
                  @artwork.Title
                </a>
              </h5>
              <p class="card-text">@artwork.Artist</p>
            </div>
            <div class="card-footer text-muted small">
              Shared by @artwork.Contributor
            </div>
          </div>
        </div>
      }
    </div>

    <div class="text-center mb-4">
      <p>Want to share a piece that inspires you?</p>
      <a asp-action="Create" class="btn btn-primary">Add artwork</a>
    </div>

    <footer class="text-center text-muted small mt-auto py-3">
      <p>&copy; 2025 ArtConnect. All rights reserved.</p>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
